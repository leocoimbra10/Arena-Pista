rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Helper function to check if user is authenticated
    function isAuth() {
      return request.auth != null;
    }

    // Users: Users can read/write their own profile; Admins can write anyone
    match /users/{userId} {
      allow read: if isAuth();
      allow write: if request.auth.uid == userId || isAdmin();
    }

    // Quadras: Public read, Admin write
    match /quadras/{quadraId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Agendamentos: Authenticated read/create, update depends on logic (omitted for brevity default allow auth)
    match /agendamentos/{agendamentoId} {
      allow read: if isAuth();
      allow write: if isAuth();
    }
    
    // Pagamentos: Similar
    match /pagamentos/{pagamentoId} {
      allow read: if isAuth();
      allow write: if isAuth();
    }

    // Professores: Public read, Admin write
    match /professores/{profId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Challenges
    match /challenges/{challengeId} {
      allow read: if true;
      allow create: if isAuth();
      allow update, delete: if request.auth.uid == resource.data.jogadorId || isAdmin();
    }
  }
}
